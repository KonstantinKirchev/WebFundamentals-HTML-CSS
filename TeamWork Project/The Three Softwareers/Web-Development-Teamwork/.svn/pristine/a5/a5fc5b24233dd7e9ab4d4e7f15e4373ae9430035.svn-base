@font-face{
    font-family: Lolita;
    src: url('../fonts/A_Lolita_Scorned.ttf');
}
@font-face{
    font-family: Agatha;
    src: url('../fonts/Agatha-Modern.ttf');
}
@font-face {
    font-family: menu-font;
    src: url('../fonts/arkwright.otf');
}

@font-face {
    font-family: slogan-font;
    src: url('../fonts/mb-demonic_tale.ttf');
}
.leftalign{
    font-size:30px; color: #fff; text-align:left; font-family: "Agatha", "Lolita";
}

body {
    background: url("../images/orlando2.jpg") no-repeat center center fixed;   
    -webkit-background-size: cover;
    -moz-background-size: cover;
    -o-background-size: cover;
    background-size: cover;
    max-width: 100%; 
    margin: 0 auto; 
}

#wrapper{
    padding: 20px;
    margin-top: -20px;  
    width: 95%;     
}

nav {
    margin: 2%;
    padding: 2%;
    width: 90%;
    float: right;
}

nav:after {
    clear: right;
}

ul > li {
    padding-left: 5%;
    display: inline-block;
    text-decoration: none;
    text-align: left;
    vertical-align: top;
}

ul > li > a,
nav > ul > li > ul > li > a {
    text-decoration: none;
    font-family: menu-font;
    font-size: 20px;
    color: #C2C2C2;
    text-align: center;
}

nav > ul > li > ul > li:hover > a,
nav > ul > li > ul > li:active > a  {
    color: #FFF;
}

nav > ul > li > ul > li {
    margin-top: 2%;
    display: none;
    padding-left: 20%;
}

nav > ul > li:hover ul {
    position: absolute;
    transition: 2s;
}

nav > ul > li:hover ul > li {
    display: block;
    text-align: left;
}
.left:hover,
.left:active{
     color: pink;
    /*Transition*/
    -webkit-transition:All .5s ease;
    -moz-transition:All .5s ease;
    -o-transition:All .5s ease;
     
    /*Transform*/
    -webkit-transform: rotate(-10deg) scale(1.2);
    -moz-transform: rotate(-10deg) scale(1.2);
    -o-transform: rotate(-10deg) scale(1.2);
}
 
.right:hover,
.right:active {
    color: orange;
    /*Transition*/
    -webkit-transition:All .5s ease;
    -moz-transition:All .5s ease;
    -o-transition:All .5s ease;
     
    /*Transform*/
    -webkit-transform: rotate(10deg) scale(1.2);
    -moz-transform: rotate(10deg) scale(1.2);
    -o-transform: rotate(10deg) scale(1.2);
}

h1 {   
    font-family: 'Agatha', cursive;
    font-weight: bold;    
    text-indent: 20px;
    font-size: 4em;
    color: black;
    text-align: center;
}

.self-printed-text{
    margin-top: 45px;
    width: 950px;
    height: 800px;    
    float: left;
}

footer.clear{
    clear: both;
}

footer {

    background: url("../images/logo-line.png" );
    background-size:  100%;    
    height: 300px;
    position: relative;
    margin-bottom: -15px; 
}

footer p {
    position: absolute;
    bottom: 8%;
    right: 2%;
    float: right;
    color: #C2C2C2;
    font-style: italic;
}

article>a{
    display: block;
    margin-bottom: 10px;
}

.logos{
    position: absolute;
    bottom: 12%;
    left: 3%;
    float: left;
}
.faces{
    width: 100px;
    height: 100px;
    border-radius: 50%;
    background-color: blue;
    
     -moz-transition:-moz-transform 0.5s ease-in; 
    -webkit-transition:-webkit-transform 0.5s ease-in; 
    -o-transition:-o-transform 0.5s ease-in;
}

.faces:hover{    
    -moz-transform:scale(2); 
    -webkit-transform:scale(2);
    -o-transform:scale(2);
}

.team-karaoke{
    margin:15px;
    width: 250px;
    height: 150px;
    border-radius: 40%;
    -moz-transition:-moz-transform 0.5s ease-in; 
    -webkit-transition:-webkit-transform 0.5s ease-in; 
    -o-transition:-o-transform 0.5s ease-in;
}

.team-karaoke:hover{
    -moz-transform:scale(2); 
    -webkit-transform:scale(2);
    -o-transform:scale(2);
}

.kaskata-trifon{
    width: 270px;
    height: 220px;
    border-radius: 40%;
    margin: 40px;
    -moz-transition:-moz-transform 0.5s ease-in; 
    -webkit-transition:-webkit-transform 0.5s ease-in; 
    -o-transition:-o-transform 0.5s ease-in;
}

.kaskata-trifon:hover {   
    -moz-transform:scale(2); 
    -webkit-transform:scale(2);
    -o-transform:scale(2);
}



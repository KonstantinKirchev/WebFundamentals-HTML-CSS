body {
    background-color: #000;
}

#wrapper {
    margin: 0 auto;
    width: 960px;
    box-sizing: border-box;
}

nav {
    margin: 2%;
    padding: 2%;
    width: 95%;
    float: right;
}

nav:after {
    clear: right;
}


ul > li {
    padding-left: 5%;
    display: inline-block;
    text-decoration: none;
    text-align: left;
    vertical-align: top;
}

ul > li > a,
nav > ul > li > ul > li > a {
    text-decoration: none;
    font-family: 'Fondamento', cursive;
    font-size: 1.2em;
    color: #C2C2C2;
    vertical-align: top;
}

ul > li:hover > a,
ul > li:active > a,
nav > ul > li > ul > li:hover > a,
nav > ul > li > ul > li:active > a  {
    color: #FFF;
}

nav > ul > li > ul > li {
    margin-top: 2%;
    display: none;
    padding-left: 20%;
}

nav > ul > li:hover ul {
    position: absolute;
}

nav > ul > li:hover ul > li {
    display: block;
}

section {
    margin: 5% 0;
    width: 45%;
    display: inline-block;
    vertical-align: top;
}

.picture {
    float: right;
}

.slogan {
    margin: 5%;
    text-transform: capitalize;
    text-align: center;
    font-family: 'Uncial Antiqua', cursive;
    font-size: 2.5em;
    color: #C2C2C2;
}

.bio {
    margin-left: 5%;
    text-indent: 20px;
}

.bio h1 {
    margin-left: 10%;
    margin-bottom: 2%;
    font-family: 'Fondamento', cursive;
    font-size: 3em;
    color: #FFF;
    text-align: left;
}

.bio p {
    margin-left: 5%;
    margin-right: 4%;
    padding-top: 1%;
    width: 95%;
    text-align: justify;
    color: #FFF;
    font-size: 1.1em;
    line-height: 1.2em;
}

span {
    font-style: italic;
    color: #C2C2C2;
}

footer {
    margin: 0 auto;
    width: 100%;
    position: relative;
}

footer p {
    position: absolute;
    bottom: 8%;
    right: 2%;
    float: right;
    color: #C2C2C2;
    font-style: italic;
}
article>a{
    display: block;
    margin-bottom: 10px;
}

.logos{
    position: absolute;
    bottom: 12%;
    float: left;
    left: 3%;
}

.social{
    width: 250px;
    height: 450px;
    margin: 20px;
}
.profile-pic {
    width: 250px;
    height: 300px;
    margin: 50px ;

}

ul > li > a>img {
    padding: 5px;
    height: 40px;
    margin: 0;
    background: #000000;
    border-radius: 5px;
}


ul.social{
    margin-top: -25px;
    margin-left: 75px;
}
/* Pulse */
@-webkit-keyframes hvr-pulse {
    25% {
        -webkit-transform: scale(1.1);
        transform: scale(1.1);
    }

    75% {
        -webkit-transform: scale(0.9);
        transform: scale(0.9);
    }
}

@keyframes hvr-pulse {
    25% {
        -webkit-transform: scale(1.1);
        transform: scale(1.1);
    }

    75% {
        -webkit-transform: scale(0.9);
        transform: scale(0.9);
    }
}

.hvr-pulse {
    display: inline-block;
    vertical-align: middle;
    -webkit-transform: translateZ(0);
    transform: translateZ(0);
    box-shadow: 0 0 1px rgba(0, 0, 0, 0);
    -webkit-backface-visibility: hidden;
    backface-visibility: hidden;
    -moz-osx-font-smoothing: grayscale;
}
.hvr-pulse:hover, .hvr-pulse:focus, .hvr-pulse:active {
    -webkit-animation-name: hvr-pulse;
    animation-name: hvr-pulse;
    -webkit-animation-duration: 1s;
    animation-duration: 1s;
    -webkit-animation-timing-function: linear;
    animation-timing-function: linear;
    -webkit-animation-iteration-count: infinite;
    animation-iteration-count: infinite;
}

/* Buzz */
@-webkit-keyframes hvr-buzz {
    50% {
        -webkit-transform: translateX(3px) rotate(2deg);
        transform: translateX(3px) rotate(2deg);
    }

    100% {
        -webkit-transform: translateX(-3px) rotate(-2deg);
        transform: translateX(-3px) rotate(-2deg);
    }
}

@keyframes hvr-buzz {
    50% {
        -webkit-transform: translateX(3px) rotate(2deg);
        transform: translateX(3px) rotate(2deg);
    }

    100% {
        -webkit-transform: translateX(-3px) rotate(-2deg);
        transform: translateX(-3px) rotate(-2deg);
    }
}

.hvr-buzz {
    display: inline-block;
    vertical-align: middle;
    -webkit-transform: translateZ(0);
    transform: translateZ(0);
    box-shadow: 0 0 1px rgba(0, 0, 0, 0);
    -webkit-backface-visibility: hidden;
    backface-visibility: hidden;
    -moz-osx-font-smoothing: grayscale;
}
.hvr-buzz:hover, .hvr-buzz:focus, .hvr-buzz:active {

    -webkit-animation-name: hvr-buzz;
    animation-name: hvr-buzz;
    -webkit-animation-duration: 0.15s;
    animation-duration: 0.15s;
    -webkit-animation-timing-function: linear;
    animation-timing-function: linear;
    -webkit-animation-iteration-count: infinite;
    animation-iteration-count: infinite;
}
img.fb:hover {
         background: #48649F;

}
img.git:hover {
    background: #4183C4;

}

img.softuni:hover {
    background: #234465;
}

@media all and (max-width: 960px){
    #wrapper {
        width: 100%;
    }
    nav {
        width: 100%;
    }
    nav > ul > li {
        margin-left: 0;
        margin-bottom: 20px;
        padding-left: 4%;
        width: 15%;
        height: 30%;
        line-height: 150%;
        text-align: center;
    }
    .picture {
        float: right;
    }
    .picture > img {
        max-width: 100%;
    }
    .slogan {
        width: 90%;
    }
    .bio {
        width: 45%;
        display: inline;
        margin-right: 2%;
        padding-right: 0;
    }
    .bio > div {
        padding-right: 5%;
    }
    footer > img {
        max-width: 100%;
    }
}

@media all and (max-width: 768px){
}

@media all and (max-width: 640px){
    nav > ul > li {
        width: 100%;
        text-align: center;
        font-size: 1.3em;
        margin: 1%;
    }
    nav > ul > li > ul {
        text-align: center;
        margin: 0 auto;
        margin-left: 5%;
    }
    nav > ul > li:nth-child(2):hover {
        margin-bottom: 8%;
    }
    nav > ul > li:nth-child(2):hover ul li {
        display: inline;
        padding: 5%;
        width: 30%;
    }
    .picture {
        display: block;
        width: 100%;
    }
    .picture > img {
        max-width: 100%;
    }
    .bio {
        width: 100%;
        margin-left: 0;
    }
    .bio > h1 {
        text-align: center;
        margin-left: 0;
    }
    .bio > p {
        margin-left: 0;
        width: 100%;
        text-align: center;
    }
    footer {
        width: 100%;
    }
    footer > img{
        max-width: 100%;
    }
}
@media all and (max-width: 480px){
    nav > ul > li > ul {
        text-align: center;
        margin: 0 auto;
    }
    nav > ul > li:nth-child(2):hover {
        margin-bottom: 8%;
    }
    nav > ul > li:nth-child(2):hover ul li {
        display: inline;
        padding: 5% 1%;
        width: 30%;
    }
    .picture {
        display: block;
        width: 100%;
    }
    .slogan {
        font-size: 2em;
    }
}
@media all and (max-width: 320px) {
    nav > ul > li {
        width: 100%;
        text-align: left;
        font-size: 1.3em;
        margin: 1%;
    }

    nav > ul > li:nth-child(2) {
        display: block;
        text-align: left;
        margin-left: 0;
    }

    nav > ul > li:nth-child(2) > ul li {
        display: block;
        text-align: left;
        margin: 0;
        padding: 0;
    }

    nav > ul > li:nth-child(2):hover {
        margin-bottom: 95px;
    }

    nav > ul > li:nth-child(2):hover ul li {
        display: block;
        text-align: left;
        padding: 0;
    }

    .picture {
        display: block;
        width: 100%;
    }

    .picture > img {
        max-width: 100%;
    }

    footer > p {
        font-size: 0.7em;
    }
}
.logo {
	width: 1600px;
	height: 459px;
	position: absolute;
	left: 0;
	top: 630px;
	background-image: url(../images/logo-line.png);
}
#wrapper > main > p{
    position: absolute;
    z-index: 1111;
    color: white;
    top: 950px;
    left: 0;
    font-size: 2em;
}

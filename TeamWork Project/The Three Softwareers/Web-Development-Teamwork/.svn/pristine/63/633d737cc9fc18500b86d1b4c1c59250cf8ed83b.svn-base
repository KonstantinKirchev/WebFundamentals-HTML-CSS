* {
	margin: 0;
	padding: 0;
}

#wrapper {
	margin: 0 auto;
    max-width: 1600px;
	position: relative;
}
.hidden-menu{
    display: none;
}
body {
	background-color: #000;
}

.background{
    width: 1600px;
    height: 1080px;
    position: absolute;
    background-image: url(../images/Background.jpg);
}
.alex {
	width: 206px;
	height: 491px;
	position: absolute;
	left: 0;
	top: 50px;
	background-image: url(../images/Alex.png);
}

.alex:hover {
	width: 206px;
	height: 491px;
	background-image: url(../images/Alex-hover.png);
}

.contacts {
	width: 178px;
	height: 191px;
	position: absolute;
	left: 405px;
	top: 5px;
	background-image: url(../images/pigeon.png);
}

.contacts:hover {
	width: 178px;
	height: 191px;
	background-image: url(../images/pigeon-hover.png);
}

.mission {
	width: 219px;
	height: 100px;

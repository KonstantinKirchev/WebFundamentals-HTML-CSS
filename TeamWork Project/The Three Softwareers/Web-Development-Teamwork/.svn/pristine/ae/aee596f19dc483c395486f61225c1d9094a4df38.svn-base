@font-face{
    font-family: Lolita;
    src: url('../fonts/A_Lolita_Scorned.ttf');
}
@font-face{
    font-family: Agatha;
    src: url('../fonts/Agatha-Modern.ttf');
}
@font-face {
    font-family: menu-font;
    src: url('../fonts/arkwright.otf');
}

@font-face {
    font-family: slogan-font;
    src: url('../fonts/mb-demonic_tale.ttf');
}
.leftalign{
    font-size:30px; color: #fff; text-align:left; font-family: "Agatha", "Lolita";
}

body {
    background: url("../images/orlando2.jpg") no-repeat center center fixed;   
    -webkit-background-size: cover;
    -moz-background-size: cover;
    -o-background-size: cover;
    background-size: cover;
    max-width: 100%; 
    margin: 0 auto; 
}

#wrapper{
    padding: 20px;
    margin-top: -20px;  
    width: 95%;     
}

nav {
    margin: 2%;
    padding: 2%;
    width: 90%;
    float: right;
}

nav:after {
    clear: right;
}

ul > li {
    padding-left: 5%;
    display: inline-block;
    text-decoration: none;
    text-align: left;
    vertical-align: top;
}

ul > li > a,
nav > ul > li > ul > li > a {
    text-decoration: none;
    font-family: menu-font;
    font-size: 20px;
    color: #C2C2C2;
    text-align: center;
}

nav > ul > li > ul > li:hover > a,
nav > ul > li > ul > li:active > a  {
    color: #FFF;
}

nav > ul > li > ul > li {
    margin-top: 2%;
    display: none;
    padding-left: 20%;
}

nav > ul > li:hover ul {
    position: absolute;
    transition: 2s;
}

nav > ul > li:hover ul > li {
    display: block;
    text-align: left;
}
.left:hover,
.left:active{
     color: pink;
    /*Transition*/
    -webkit-transition:All .5s ease;
    -moz-transition:All .5s ease;
    -o-transition:All .5s ease;
     
    /*Transform*/
    -webkit-transform: rotate(-10deg) scale(1.2);
    -moz-transform: rotate(-10deg) scale(1.2);
    -o-transform: rotate(-10deg) scale(1.2);
}
 
.right:hover,
.right:active {
    color: orange;
    /*Transition*/
    -webkit-transition:All .5s ease;
    -moz-transition:All .5s ease;
    -o-transition:All .5s ease;
     
    /*Transform*/
    -webkit-transform: rotate(10deg) scale(1.2);
    -moz-transform: rotate(10deg) scale(1.2);
    -o-transform: rotate(10deg) scale(1.2);
}

h1 {   
    font-family: menu-font;
    font-size: 3em;
    color: #FFF;
    text-align: center;
}

.self-printed-text{
    margin-top: 45px;
    width: 350px;
    height: 800px;    
    float: left;
}

footer.clear{
    clear: both;
}

footer {
    margin: 0 auto;
    width: 100%;
    position: relative;
}

footer p {
    position: absolute;
    bottom: 2%;
    right: 2%;
    float: right;
    color: #C2C2C2;
    font-style: italic;
}



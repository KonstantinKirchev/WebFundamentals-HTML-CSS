@font-face {
    font-family: menu-font;
    src: url('../fonts/arkwright.otf');
}

@font-face {
    font-family: slogan-font;
    src: url('../fonts/mb-demonic_tale.ttf');
}

body {
	background-color: #000;
}

#wrapper {
	margin: 0 auto;
	width: 960px;
	box-sizing: border-box;
}

nav {
	margin: 2%;
	padding: 2%;
	width: 90%;
	float: right;
}

nav:after {
	clear: right;
}


ul > li {
	padding-left: 5%;
	display: inline-block;
	text-decoration: none;
	text-align: left;
	vertical-align: top;
}

ul > li > a,
nav > ul > li > ul > li > a {
	text-decoration: none;
	font-family: menu-font;
	font-size: 1.2em;
	color: #C2C2C2;
	vertical-align: top;
}

ul > li:hover > a,
ul > li:active > a,
nav > ul > li > ul > li:hover > a,
nav > ul > li > ul > li:active > a  {
	color: #FFF;
}

nav > ul > li > ul > li {
	margin-top: 2%;
	display: none;
	padding-left: 20%;
}

nav > ul > li:hover ul {
	position: absolute;
	transition: 2s;
} 

nav > ul > li:hover ul > li {
	display: block;
}

section {
	margin: 5% 0;
	width: 45%;
	display: inline-block;
	vertical-align: top;
}

.picture {
	float: right;
}

.slogan {
	margin: 5%;
	text-transform: capitalize;
	text-align: center;
	font-family: slogan-font;
	font-size: 2.5em;
	color: #C2C2C2;
}

.bio {
	margin-left: 5%;
	text-indent: 20px;
}

.bio h1 {
	margin-left: 10%;
	margin-bottom: 2%;
	font-family: menu-font;
	font-size: 3em;
	color: #FFF;
	text-align: left;
}

.bio p {
	margin-left: 5%;
	margin-right: 4%;
	padding-top: 1%;
	width: 95%;
	text-align: justify;
	color: #FFF;
	font-size: 1.1em;
	line-height: 1.2em;
}

span {
	font-style: italic;
	color: #C2C2C2;
}

footer {
	margin: 0 auto;
	width: 100%;
	position: relative;
}

footer p {
	position: absolute;
	bottom: 2%;
	right: 2%;
	float: right;
	color: #C2C2C2;
	font-style: italic;
}

@media all and (max-width: 960px){
	#wrapper {
		width: 100%;
	}
	nav {
		width: 100%;
	}
	nav > ul > li {
		margin-left: 0;
		margin-bottom: 20px;
		padding-left: 4%;
		width: 15%;
		height: 30%;
		line-height: 150%;
		text-align: center;
	}
	.picture {
		float: right;
	}
	.picture > img {
		max-width: 100%;
	}
	.slogan {
		width: 90%;
	}
	.bio {
		width: 45%;
		display: inline;
		margin-right: 2%;
		padding-right: 0;
	}
	.bio > div {
		padding-right: 5%;
	}
	footer > img {
		max-width: 100%;
	}
}

@media all and (max-width: 768px){
}

@media all and (max-width: 640px){
	nav > ul > li {
		width: 100%;
		text-align: center;
		font-size: 1.3em;
		margin: 1%;
	}
	nav > ul > li > ul {
		text-align: center;
		margin: 0 auto;
		margin-left: 5%;
	}
	nav > ul > li:nth-child(2):hover {
		margin-bottom: 8%;
	}
	nav > ul > li:nth-child(2):hover ul li {
		display: inline;
		padding: 5%;
		width: 30%;
	}	
	.picture {
		display: block;
		width: 100%;
	}
	.picture > img {
		max-width: 100%;
	}
	.bio {
		width: 100%;
		margin-left: 0;
	}
	.bio > h1 {
		text-align: center;
		margin-left: 0;
	}
	.bio > p {
		margin-left: 0;
		width: 100%;
		text-align: center;
	}
	footer {
		width: 100%;
	}
	footer > img{
		max-width: 100%;
	}
}
@media all and (max-width: 480px){
	nav > ul > li > ul {
		text-align: center;
		margin: 0 auto;
	}
	nav > ul > li:nth-child(2):hover {
		margin-bottom: 8%;
	}
	nav > ul > li:nth-child(2):hover ul li {
		display: inline;
		padding: 5% 1%;
		width: 30%;
	}
	.picture {
		display: block;
		width: 100%;
	}
	.slogan {
		font-size: 2em;
	}
}
@media all and (max-width: 320px){
	nav > ul > li {
		width: 100%;
		text-align: left;
		font-size: 1.3em;
		margin: 1%;
	}
	nav > ul > li:nth-child(2) {
		display: block;
		text-align: left;
		margin-left: 0;
	}

	nav > ul > li:nth-child(2) > ul li{
		display: block;
		text-align: left;
		margin: 0;
		padding: 0;
	}
	nav > ul > li:nth-child(2):hover {
		margin-bottom: 95px;
	}
	nav > ul > li:nth-child(2):hover ul li {
		display: block;
		text-align: left;
		padding: 0;
	}
	.picture {
		display: block;
		width: 100%;
	}
	.picture > img{
		max-width: 100%;
	}
	footer > p {
		font-size: 0.7em;
	}
}